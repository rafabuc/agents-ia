-- Buscar todas las conversaciones sobre riesgos
SELECT * FROM message_search WHERE content MATCH 'riesgo OR risk';

-- Estad√≠sticas de uso por proyecto
SELECT project_id, COUNT(*) as messages, SUM(tokens_used) as total_tokens 
FROM conversation_messages 
GROUP BY project_id;

-- Conversaciones m√°s activas
SELECT s.name, COUNT(m.id) as message_count
FROM conversation_sessions s
JOIN conversation_messages m ON s.id = m.session_id
GROUP BY s.id
ORDER BY message_count DESC;



